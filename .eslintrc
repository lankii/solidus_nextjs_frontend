{
  "settings": {
    "jest": {
      "version": 26
    }
  },
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest/globals": true
  },
  "globals": {
    "cy": "readonly",
    "Cypress": "readonly",
    "render": "readonly"
  },
  "extends": [
    "plugin:react/recommended",
    "plugin:jest/recommended",
    "standard"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "jest"
  ],
  "rules": {
    "react/react-in-jsx-scope": "off"
  }
}
